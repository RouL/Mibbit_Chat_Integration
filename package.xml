<package name="info.codingcorner.wcf.mibbit">
	<packageinformation>
		<packagename>Mibbit Chat Integration</packagename>
		<version>1.0.0 RC 2</version>
		<date>2008-11-28</date>
		<plugin>com.woltlab.wcf.data.page.headerMenu</plugin>
	</packageinformation>

	<authorinformation>
		<author>RouL</author>
		<authorurl>http://codingcorner.info/</authorurl>
	</authorinformation>

	<requiredpackages>
		<requiredpackage minversion="1.0.10">com.woltlab.wcf</requiredpackage>
		<requiredpackage minversion="1.0.2">com.woltlab.wcf.data.page.headerMenu</requiredpackage>
	</requiredpackages>

	<instructions type="update" fromversion="1.0.0 RC 1">
		<files>files.tar</files>
		<options>options_update.xml</options>
		<languages languagecode="de">de_update.xml</languages>
		<languages languagecode="de-informal">de-informal_update.xml</languages>
		<languages languagecode="en">en_update.xml</languages>
	</instructions>

	<instructions type="install">
		<files>files.tar</files>
		<templates>templates.tar</templates>
		<options>options.xml</options>
		<headermenu>headermenu.xml</headermenu>
		<!--
			If we hava page locations package installed install page location.
			Otherwise this line won't harm anything.
		-->
		<pagelocation>pagelocation.xml</pagelocation>
		<languages languagecode="de">de.xml</languages>
		<languages languagecode="de-informal">de-informal.xml</languages>
		<languages languagecode="en">en.xml</languages>
	</instructions>
</package>
